<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Clase_Practica.View.EditarClinica"
             Title="Actualizar Clinica 👽"
             >
    <ContentPage.Content>
        <StackLayout Margin="20">
            <!-- Aquí se muestra el ID de la clínica seleccionada -->
            <Label Text="ID de la clínica seleccionada:" />
            <Entry x:Name="IdEntry" Margin="0,0,0,10" IsEnabled="False"/>

            <!-- Aquí se permitirá editar los datos de la clínica -->
            <Label Text="Nuevo nombre de la clínica:" />
            <Entry x:Name="NuevoClinicaNombreEntry" Margin="0,0,0,10"/>

            <Label Text="Nueva dirección:" />
            <Entry x:Name="NuevaDireccionEntry" Margin="0,0,0,10"/>

            <Label Text="Nuevo RUC:" />
            <Entry x:Name="NuevoRucEntry" Margin="0,0,0,10"/>

            <!-- Botón para actualizar la clínica -->
            <Button Text="Actualizar clínica"
            Clicked="OnActualizarClinicaClicked" Margin="0,20,0,0"/>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>